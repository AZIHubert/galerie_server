{
    "watch": [
      "src"
    ],
    "ext": "ts",
    "verbose": true,
    "exec": "ts-node src/index.ts",
    "ignore": [
      "**/*.spec.js",
      "**/*.spec.ts",
      "**/*.test.js",
      "**/*.test.ts",
      "**/*.helper.js",
      "**/*.helper.ts",
      "dist",
      "node_modules/**"
    ],
    "env": {
      "NODE_ENV": "development",
      "PORT": "5000"
  }
}