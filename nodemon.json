{
    "watch": [
      "src"
    ],
    "ext": "ts",
    "verbose": true,
    "exec": "ts-node src/index.ts",
    "ignore": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts",
      "dist",
      ".git",
      "node_modules"
    ],
    "env": {
      "NODE_ENV": "development",
      "PORT": "8000"
  }
}