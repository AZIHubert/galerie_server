{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "no-console": "off",
        "indent": "off",
        "@typescript-eslint/indent": ["error", 2],
        "@typescript-eslint/naming-convention": [
            "error", {
                "selector": ["interface"],
                "format": ["PascalCase"]
            }
        ]
    }
}
